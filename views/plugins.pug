html
  head
    style
      include style.css
    title= title
  body
    h1
      img(src='/luppolo.png')
      a(href='/')= title
    div#menu
      div#menuHeader
        h2
          span= '[Plugins] - '
          a(href='/luppolo/ui/')= '[DBs]'
      ul
        if plugins.length == 0
          li [no Plugins]
        each plugin in plugins
          li
            a(href='/luppolo/ui/plugins/' + plugin.id+'?pretty' target='valueFrame')= plugin.name

    iframe#valueFrame(name='valueFrame')