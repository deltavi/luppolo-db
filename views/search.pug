html
  head
    style
      include style.css
    script
      include script.js
    title= title
  body
    h1
      img(src='/luppolo.png')
      a(href='/')= title
    div#menuHeader
      h2
        a(href='/') Home
        span= ' / DB: '
        a(href='./')= db
        span= ' / search'
        div#queryBox
          textarea#query(name='query')
            |{
            | "jpath" : "$"
            |}
          a(href= '#' class='searchBtn' onclick='onSearch("' + db + '", "query", "valueFrame")')= 'search'
    iframe#valueFrame(name='valueFrame')